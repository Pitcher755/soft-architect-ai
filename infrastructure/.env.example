# ═══════════════════════════════════════════════════════════════
# Docker Compose Environment Configuration
#
# Usado por docker-compose.yml para:
#   - Versiones de imágenes
#   - Límites de recursos (RAM, CPU)
#   - Configuración de servicios
#
# INSTRUCCIONES:
# 1. Este archivo se carga automáticamente por docker-compose
# 2. Editar valores según tu entorno
# 3. Está en .gitignore (nunca se commitea)
# ═══════════════════════════════════════════════════════════════

# ─────────────────────────────────────────────────────────────
# IMÁGENES DOCKER (versiones)
# ─────────────────────────────────────────────────────────────
OLLAMA_IMAGE_VERSION=latest
CHROMADB_IMAGE_VERSION=latest
PYTHON_VERSION=3.12.3

# ─────────────────────────────────────────────────────────────
# LÍMITES DE RECURSOS
# ─────────────────────────────────────────────────────────────
# Ollama: El más hambriento (modelos grandes)
# Típico: 2GB para qwen2.5-coder:7b, 4GB para modelos más grandes
OLLAMA_MEMORY_LIMIT=2GB
OLLAMA_CPU_SHARES=1024

# ChromaDB: Ligero, 512MB es suficiente
CHROMADB_MEMORY_LIMIT=512MB

# FastAPI: Pequeño, 512MB es generoso
API_MEMORY_LIMIT=512MB

# ─────────────────────────────────────────────────────────────
# LLM PROVIDER (local o cloud)
# ─────────────────────────────────────────────────────────────
LLM_PROVIDER=local
# LLM_PROVIDER=cloud  # Descomentar para usar Groq

# ─────────────────────────────────────────────────────────────
# OLLAMA SETTINGS (Local LLM)
# ─────────────────────────────────────────────────────────────
OLLAMA_MODEL=qwen2.5-coder:7b
# Alternativas:
# OLLAMA_MODEL=llama2:7b          # General purpose
# OLLAMA_MODEL=mistral:7b         # Balance speed/quality
# OLLAMA_MODEL=neural-chat:7b     # Chat optimizado
# OLLAMA_MODEL=openhermes:7b      # Muy bueno para código

# ─────────────────────────────────────────────────────────────
# GROQ SETTINGS (Cloud LLM - Si LLM_PROVIDER=cloud)
# ─────────────────────────────────────────────────────────────
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama2-70b-4096

# ─────────────────────────────────────────────────────────────
# PRIVACY & SECURITY
# ─────────────────────────────────────────────────────────────
DEBUG=False
IRON_MODE=True  # Paranoico: no permite calls externos
PII_DETECTION_ENABLED=True
